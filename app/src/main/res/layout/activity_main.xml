<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Lable1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:text="first name "
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Input_firstName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="first name"
        android:inputType="textPersonName"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/Lable1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Lable1" />

    <TextView
        android:id="@+id/lable2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/Lable1"
        app:layout_constraintTop_toBottomOf="@+id/Lable1" />

    <TextView
        android:id="@+id/lable3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/Lable1"
        app:layout_constraintTop_toBottomOf="@+id/lable2" />

    <EditText
        android:id="@+id/Input_lastName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:ems="10"
        android:inputType="textPersonName"
        android:hint="last name"
        app:layout_constraintBottom_toBottomOf="@+id/lable2"
        app:layout_constraintEnd_toEndOf="@+id/Input_firstName"
        app:layout_constraintStart_toStartOf="@+id/Input_firstName" />

    <EditText
        android:id="@+id/Input_age"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:maxLength="3"
        android:inputType="number"
        android:hint="age"
        app:layout_constraintBottom_toBottomOf="@+id/lable3"
        app:layout_constraintEnd_toEndOf="@+id/Input_firstName"
        app:layout_constraintStart_toStartOf="@+id/Input_firstName" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lable3">

        <Button
            android:id="@+id/save"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_marginHorizontal="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center_horizontal|center_vertical"
            android:text="save" />

        <Button
            android:id="@+id/load"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_marginHorizontal="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="laod" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>